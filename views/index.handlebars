<div class="container">

  <div class="row">

    <div class="col-md-12">
      <h1 class="text-center text-danger">Eat-Da-Burger</h1>
      <img src="/assets/img/hamburgerbg.jpg" alt="hamburgerpic" class="rounded mx-auto d-block img-fluid">
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-lg-12">
      <h2>Add a Burger</h2>
        <form action="burger/create" method="POST" class="create-form">

         <div class="form-group">
          <label for="burger_name">Burger Name:</label>
          <input type="text" id="burger_name" name="name">
         </div>

        <button id="addburger">Add Burger</button>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-lg-6">
      <h2>Devour a Burger!</h2>
      <div id="uneatenburger">
        
        {{#each burgers}}
          {{#unless devoured}}
          <form action="burger/updateOne/{{id}}" method="PUT">
            <div class="input-group">
              <li class="form-control">{{id}}. {{burger_name}}</li>
                <span class="input-group-btn">
                  <button id="devourburger">Devour It!</button>
                </span>
            </div>
          </form>
          {{/unless}}
        {{/each}}

      </div>
    </div>
    <br>
  <div class="col-lg-6">
    <h2>Already eaten!</h2>
      <div id="eatenburger">

        {{#each burgers}}
          {{#if this.devoured}}
            <div class="input-group">
              <li class="form-control">{{this.id}}. {{this.burger_name}}</li>
            </div>
          {{/if}}
        {{/each}}

      </div>
  </div>
</div>